{% extends '::base.html.twig' %}

{% block body -%}
<div class="container">
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ entity.author }}</td>
            </tr>
            <tr>
                <th>Authoremail</th>
                <td>{{ entity.authorEmail }}</td>
            </tr>
            <tr>
                <th>Posttext</th>
                <td>{{ entity.postText }}</td>
            </tr>
        </tbody>
    </table>


<ul class="list-inline">
    <li>
        <a href="{{ path('article') }}" class="btn btn-info">
            Back to the list
        </a>
    </li>
    {% if is_granted('ROLE_ADMIN') %}
    <li>
        <a href="{{ path('article_edit', { 'id': entity.id }) }}" class="btn btn-info">
            Edit
        </a>
    </li>
    {%endif%}
</ul>


    
    </div>

{% endblock %}
